@model AppointmentViewModel

@{
    ViewData["Title"] = "Appointments";
}

<h3>Appointments</h3>
<div class="panel panel-default appointment-panel">
    <table class="table table-hover">
        <thead class="thead-inverse">
            <tr>
                <th>Title</th>
                <th>Notes</th>
                <th>Date</th>
                <th>Repetition</th>
                <th>Days before reminding</th>
                <th>Weeks before reminding</th>
            </tr>
        </thead>
        @foreach (var item in Model.AppointmentItems)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Notes</td>
                <td>@item.ReferenceDate</td>
                <td>@item.Repetitions</td>
                <td>@item.RemindeBeforeDays</td>
                <td>@item.RemindeBeforeWeeks</td>
            </tr>
        }
    </table>
    <div class="panel-footer add-item-form">
        <a id="NewAppointmentButton" asp-action="New" asp-controller="Appointments" class="btn btn-default">Add new appointment</a>
    </div>
</div>


